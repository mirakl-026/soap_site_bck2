{{#if isAdm}}
    <h1>Добавить новую коллекцию</h1>

    <form action="/api/collection" method="POST">
        <div class="input-field">
            <input id="name" name="name" type="text" class="validate" required>
            <label for="name">Название коллекции</label>
            <span class="helper-text" data-error="Введите название"></span>
        </div>

        <div class="input-field">
            <input id="description" name="description" type="text" class="validate" required>
            <label for="description">Описание</label>
            <span class="helper-text" data-error="Введите описание"></span>
        </div>

        <div class="input-field">
            <input id="isActive" name="isActive" type="checkbox" class="validate">
            <label for="isActive">Активен</label>
            <span class="helper-text" data-error="Активен"></span>
        </div>

        <div class="input-field">
            <input id="image" name="image" type="text" class="validate">
            <label for="image">Добавить путь к картинке </label>
            <span class="helper-text" data-error="Впишите URL"></span>
        </div>

        <div class="input-field">
            <input id="parentId" name="parentId" type="text" class="validate">
            <label for="parentId">ID родителя </label>
            <span class="helper-text" data-error="Впишите ID"></span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}">

        <button class="btn btn-primary">Добавить коллекцию</button>
    </form>
{{/if}}

