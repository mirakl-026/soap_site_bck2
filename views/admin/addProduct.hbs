{{#if isAdm}}
    <h1>Добавить новый товар</h1>

    <form action="/api/product" method="POST">
        <div class="input-field">
            <input id="name" name="name" type="text" class="validate" required>
            <label for="name">Название товара</label>
            <span class="helper-text" data-error="Введите название"></span>
        </div>

        {{#if collectionsVM}}
            <div>Названия текущих коллекций:</div>
            <ul>
                {{#each collectionsVM}}
                    <li>{{this.name}} - {{this._id}}</li>
                {{/each}}
            </ul>
        {{/if}}
        <div class="input-field">
            <input id="collectionName" name="collectionName" type="text" class="validate" required>
            <label for="collectionName">Коллекция</label>
            <span class="helper-text" data-error="Введите коллекцию (тип товара)"></span>
        </div>

        <div class="input-field">
            <input id="price" name="price" type="number" class="validate" min=1 required>
            <label for="price">Цена</label>
            <span class="helper-text" data-error="Введите цену (>1)"></span>
        </div>

        <div class="input-field">
            <input id="description" name="description" type="text" class="validate">
            <label for="description">Описание</label>
            <span class="helper-text" data-error="Введите описание"></span>
        </div>

        <div class="input-field">
            <input id="isActive" name="isActive" type="checkbox" class="validate">
            <label for="isActive">Активен</label>
            <span class="helper-text" data-error="Активен"></span>
        </div>


        <!--    Для картинок-->
        <div class="input-field">
            <input id="images" name="images" type="text" class="validate">
            <label for="images">Картинки</label>
            <span class="helper-text" data-error="Массив ссылок на картинки"></span>
        </div>

        <div class="input-field">
            <input id="collectionId" name="collectionId" type="text" class="validate">
            <label for="collectionId">ID коллекции</label>
            <span class="helper-text" data-error="ID"></span>
        </div>
        <input type="hidden" name="_csrf" value="{{csrf}}">

        <button class="btn btn-primary">Добавить товар</button>
    </form>
{{/if}}


