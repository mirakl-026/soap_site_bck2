{{#if isAdm}}
    <h1>Добавить новую скидку (акцию)</h1>

    <form action="/api/sale" method="POST">
        <div class="input-field">
            <input id="saleType" name="saleType" type="text" class="validate" required>
            <label for="saleType">Тип скидки [%]/[число]</label>
            <span class="helper-text" data-error="Введите percent/number"></span>
        </div>

        <div class="input-field">
            <input id="saleValue" name="saleValue" type="number" class="validate" required>
            <label for="saleValue">Значение скидки</label>
            <span class="helper-text" data-error="Введите значение (% - 1..99, [1] - 1...)"></span>
        </div>

        <div class="input-field">
            <input id="saleName" name="saleName" type="text" class="validate" required>
            <label for="saleName">Название скидки (акции)</label>
            <span class="helper-text" data-error="Введите название"></span>
        </div>

        <div class="input-field">
            <input id="saleDescription" name="saleDescription" type="text" class="validate">
            <label for="saleDescription">Описание акции</label>
            <span class="helper-text" data-error="Введите описание"></span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}">

        <button class="btn btn-primary">Добавить скидку (акцию)</button>
    </form>
{{/if}}
